generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Settings {
  id                Int      @id @default(1)
  p1_einkommen      Float    @default(2215)
  p2_einkommen      Float    @default(1600)
  restgeld_vormonat Float    @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  ahorros_betrag    Float    @default(0)
  comida_betrag     Float    @default(1200)

  @@map("settings")
}

model Expense {
  id           Int      @id @default(autoincrement())
  beschreibung String
  betrag       Float
  bezahlt_von  Payer
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("expenses")
}

model Income {
  id           Int          @id @default(autoincrement())
  beschreibung String
  betrag       Float
  quelle       IncomeSource
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@map("incomes")
}

model PrivateExpense {
  id           Int          @id @default(autoincrement())
  beschreibung String
  betrag       Float
  person       Partner
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@map("private_expenses")
}

enum Payer {
  Partner1
  Partner2
  Gemeinschaftskonto
}

enum IncomeSource {
  Partner1
  Partner2
}

enum Partner {
  Partner1
  Partner2
}
